@page
@model WebApp.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Order List</h1>

    <p>
        <a asp-page="Create" class="btn btn-primary">Create New</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Order Date</th>
                <th>Required Date</th>
                <th>Shipped Date</th>
                <th>Freight</th>
                <th>Shipping Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Order)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Customer.CustomerId)</td>
                    <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.RequiredDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.ShippedDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Freight)</td>
                    <td>@Html.DisplayFor(modelItem => item.ShipAddress)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.OrderId" class="btn btn-primary">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.OrderId" class="btn btn-info">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.OrderId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Report</h2>
    <p><strong>Customer with Most Orders:</strong> @Model.TopCustomer</p>
    <p><strong>Most Frequent Shipping Address:</strong> @Model.TopShippingAddress</p>
</div>
